<h1>Searching for - <%= @search_term %></h1>

<% if @recipes.nil? %>
    <p>
      No recipes found with relevant information...Sorry
    </p>
<% else %>
    <table border="1">
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Social Rank</th>
      </tr>
      <% @recipes.each do |recipe| %>
          <tr>
            <td>
              <%= image_tag(recipe["image_url"],
                            height: '100',
                            width: '100') %>
            </td>
            <td><%= recipe["title"] %></td>
            <td><%= recipe["social_rank"] %></td>
          </tr>
      <% end %>
    </table>
<% end %>